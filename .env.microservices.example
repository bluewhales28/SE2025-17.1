# Environment variables for microservices with separate databases
# Copy this file to .env and update with your values

# ============================================================
# DATABASE CREDENTIALS (Each service has separate credentials)
# ============================================================

# User Auth Database
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_pass_secure_123

# Quiz Database
QUIZ_DB_USER=quiz_user
QUIZ_DB_PASSWORD=quiz_pass_secure_123

# Class Assignment Database
CLASS_DB_USER=class_user
CLASS_DB_PASSWORD=class_pass_secure_123

# Notification Database
NOTIF_DB_USER=notif_user
NOTIF_DB_PASSWORD=notif_pass_secure_123

# Recommendation Database
RECOMMENDATION_DB_USER=recommendation_user
RECOMMENDATION_DB_PASSWORD=recommendation_pass_secure_123

# Analytics Database
ANALYTICS_DB_USER=analytics_user
ANALYTICS_DB_PASSWORD=analytics_pass_secure_123

# ============================================================
# JWT CONFIGURATION
# ============================================================

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-256-bits
JWT_EXPIRATION=86400000

# ============================================================
# RABBITMQ CONFIGURATION
# ============================================================

RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123

# ============================================================
# SMTP CONFIGURATION (for email notifications)
# ============================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@quizapp.com

# ============================================================
# FRONTEND CONFIGURATION
# ============================================================

NEXT_PUBLIC_API_URL=http://localhost/api/v1
