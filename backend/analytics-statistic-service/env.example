# Application
APP_NAME=Analytics Service
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/analytics_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Message Queue - Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_QUIZ_TOPIC=quiz_submitted
KAFKA_CLASS_TOPIC=class_updated
KAFKA_GROUP_ID=analytics_service

# Message Queue - RabbitMQ (alternative)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_QUIZ_QUEUE=quiz_submitted
RABBITMQ_CLASS_QUEUE=class_updated

# External Services
QUIZ_SERVICE_URL=http://localhost:8001
CLASS_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8003
AUTH_SERVICE_URL=http://localhost:8000

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# PDF Generation
PDF_OUTPUT_DIR=./reports/pdf
CERTIFICATE_TEMPLATE_DIR=./app/templates
FONT_DIR=./fonts

# Fraud Detection
FRAUD_DETECTION_ENABLED=True
SIMILARITY_THRESHOLD=0.9
ABNORMAL_SPEED_THRESHOLD=30
PATTERN_ANOMALY_THRESHOLD=0.8

# Scheduled Jobs
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
ENABLE_SCHEDULED_JOBS=True

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json


